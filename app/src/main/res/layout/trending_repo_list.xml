<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
       style="@style/Width_Match_Height_Wrap"
        android:layout_marginTop="15dp"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ProfileIv"
            style="@style/Width_Height_50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_launcher_background"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/AuthorTv"
            style="@style/Width_Height_Wrap"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ProfileIv"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:ellipsize="end"
            android:layout_marginTop="15dp"
            android:maxWidth="300dp"
            android:maxLines="1"
            android:textColor="@color/black_light"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/NameTv"
            style="@style/Width_Height_Wrap"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ProfileIv"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:layout_marginTop="3dp"
            android:maxWidth="300dp"
            android:maxLines="1"
            android:textColor="@color/black_light"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/DescriptionTv"
            style="@style/Width_Height_Wrap"
            android:paddingLeft="10dp"
            android:maxLines="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxWidth="300dp"
            android:layout_marginLeft="15dp"
            android:paddingTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/NameTv"
            app:layout_constraintLeft_toLeftOf="parent"

            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/LanguageColorIv"
           style="@style/Width_Height_Wrap"
            android:src="@drawable/ic_circle_language"
            app:layout_constraintTop_toBottomOf="@id/DescriptionTv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="23dp"

            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/LanguageTv"
            style="@style/Width_Height_Wrap"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/DescriptionTv"
            app:layout_constraintLeft_toRightOf="@id/LanguageColorIv"
            android:textSize="14sp"
            android:text="asldjfsldkfj"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxWidth="300dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/StarsTv"
            style="@style/Width_Height_Wrap"
            app:layout_constraintTop_toBottomOf="@id/DescriptionTv"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_baseline_star_rate_24"
            android:maxLines="1"
            android:drawablePadding="5dp"
            android:textColor="@color/black_light"
            android:ellipsize="end"
            android:maxWidth="300dp"
            android:textSize="13sp"
            android:layout_marginRight="10dp"
            />
        <View
            style="@style/Width_Match_Height_Wrap"
            android:layout_height=".5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/StarsTv"
            android:layout_marginTop="15dp"
            android:background="@color/black"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>