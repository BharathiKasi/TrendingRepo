<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/SearchParent"
            style="@style/Width_Match_Height_Wrap"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/SearchIconParent"
           style="@style/Width_Match_Height_Wrap"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/TrendingRepoSearchIndicatorTv"
            style="@style/Width_Height_Wrap"
            android:text="Trending Repositories"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/SearchIconIV"
               style="@style/Width_Height_Wrap"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_search_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="10dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/SearchingParent"
            style="@style/Width_Match_Height_Wrap"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
           >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/BackButton"
                android:src="@drawable/ic_baseline_arrow_back_24"
               style="@style/Width_Height_Wrap"
                android:padding="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/EditText"
                android:layout_width="300dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toRightOf="@id/BackButton"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@null"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/CancelIv"
               style="@style/Width_Height_Wrap"
                android:src="@drawable/ic_outline_cancel_24"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="10dp"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/EditText"
                app:layout_constraintLeft_toRightOf="@id/BackButton"
                android:background="@color/black_light"
                android:layout_marginRight="50dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/Width_Match_Height_Wrap"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <ProgressBar
                android:id="@+id/ProgressBar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:indeterminateTint="@color/blue"
                android:visibility="gone"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/NoInternetTv"
                style="@style/Width_Match_Height_Wrap"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="No network connection"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                android:textSize="18sp"
                android:gravity="center"
                android:visibility="gone"
                />
            <androidx.appcompat.widget.AppCompatButton
               style="@style/Width_Height_Wrap"
                android:text="TRY AGAIN"
                android:layout_marginTop="15dp"
                android:textColor="@color/blue"
                android:elevation="10dp"
                android:padding="10dp"
                android:visibility="gone"
                android:background="#FCFCFF"
                app:layout_constraintTop_toBottomOf="@id/NoInternetTv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/mSwipeToRefresh"
            style="@style/Width_Height_Wrap"
            app:layout_constraintTop_toBottomOf="@id/SearchParent"
            app:layout_constraintLeft_toLeftOf="parent"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerView"
                style="@style/Width_Height_Wrap"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>